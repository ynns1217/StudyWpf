                --><!--클래스 뉴카를 갖고온거 --><!--
                <local:Car.Driver>
                    <local:Human x:Name="driver"
                             FirstName="Nick" HasDrivingLicense="True"/>
                </local:Car.Driver>
            </local:Car>
        </Label>-->
        <Button x:Name="btnOK" Content="OK" Grid.Row="0" Grid.Column="1" Click="btnOK_Click"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="Test" Margin="10"
                 TextWrapping="Wrap"/>
    </Grid>
</Page>
